@using TravelTripProject.Models.Classes
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h2>Blog List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var x in Model)
    {
        count++;
    <tr>
        <td>@count</td>
        <td>@x.Title</td>
        <td><a href="/Admin/DeleteBlog/@x.Id" class="btn btn-danger">Delete</a></td>
        <td><a href="/Admin/FindBlog/@x.Id" class="btn btn-warning">Update</a></td>
        <td><a href="#" class="btn btn-info">Details</a></td>
    </tr>
    }
</table>
<a href="/Admin/NewBlog/" class="btn btn-primary">New Blog</a>
