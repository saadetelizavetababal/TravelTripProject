@using TravelTripProject.Models.Classes
@model List<TravelTripProject.Models.Comment>

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<h2>Comment List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Mail</th>
        <th>Comment</th>
        <th>Blog</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        count++;
    <tr>
        <td>@count</td>
        <td>@x.Username</td>
        <td>@x.Mail</td>
        <td>@x.CommentDetails</td>
        <td>@x.Blog.Title</td>
        <td><a href="/Admin/DeleteComment/@x.Id" class="btn btn-danger">Delete</a></td>
        <td><a href="/Admin/FindComment/@x.Id" class="btn btn-warning">Update</a></td>
    </tr>
    }
</table>

